{
  "name": "markdown-table-editor",
  "displayName": "Markdown Table Editor",
  "description": "Edit Markdown tables with a spreadsheet-like interface",
  "version": "0.12.0",
  "publisher": "tyngw",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyngw/markdown-table-editor.git"
  },
  "license": "MIT",
  "icon": "icon.png",
  "keywords": [
    "markdown",
    "table",
    "editor",
    "spreadsheet"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:markdownTableEditor.openEditor"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdownTableEditor.openEditor",
        "title": "%openEditor.title%",
        "category": "Markdown Table Editor"
      },
      {
        "command": "markdownTableEditor.openEditorNewPanel",
        "title": "%openEditorNewPanel.title%",
        "category": "Markdown Table Editor"
      },
      {
        "command": "markdownTableEditor.selectTheme",
        "title": "%selectTheme.title%",
        "category": "Markdown Table Editor"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "markdownTableEditor.openEditor",
          "when": "editorLangId == markdown",
          "group": "navigation"
        },
        {
          "command": "markdownTableEditor.openEditorNewPanel",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Table Editor",
      "properties": {
        "markdownTableEditor.theme": {
          "type": "string",
          "default": "inherit",
          "markdownDescription": "%config.theme.description%"
        },
        "markdownTableEditor.fontFamily": {
          "type": "string",
          "default": "",
          "markdownDescription": "%config.fontFamily.description%"
        },
        "markdownTableEditor.fontSize": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 100,
          "markdownDescription": "%config.fontSize.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run build-webview && npm run copy-mock",
    "compile:debug": "MTE_KEEP_CONSOLE=1 tsc -p ./ && npm run build-webview:debug && npm run copy-mock",
    "build-webview": "cd webview-react && npm install && npm run build && cd .. && mkdir -p out/webview && cp -r webview-dist/* out/webview/",
    "build-webview:debug": "cd webview-react && npm install && npm run build:debug && cd .. && mkdir -p out/webview && cp -r webview-dist/* out/webview/",
    "copy-mock": "mkdir -p out/src/mock && cp test/mock/* out/src/mock/",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && npm run lint && node ./out/src/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "iconv-lite": "^0.6.3",
    "jaconv": "^1.1.2",
    "markdown-it": "^13.0.1"
  }
}
