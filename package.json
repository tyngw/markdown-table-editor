{
  "name": "markdown-table-editor",
  "displayName": "Markdown Table Editor",
  "description": "Edit Markdown tables with a spreadsheet-like interface",
  "version": "0.5.2",
  "publisher": "tyngw",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyngw/markdown-table-editor.git"
  },
  "license": "MIT",
  "icon": "icon.png",
  "keywords": [
    "markdown",
    "table",
    "editor",
    "spreadsheet"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:markdownTableEditor.openEditor"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdownTableEditor.openEditor",
        "title": "Open Table Editor",
        "category": "Markdown Table Editor"
      },
      {
        "command": "markdownTableEditor.selectTheme",
        "title": "Select Table Editor Theme",
        "category": "Markdown Table Editor"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "markdownTableEditor.openEditor",
          "when": "editorLangId == markdown",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Table Editor",
      "properties": {
        "markdownTableEditor.theme": {
          "type": "string",
          "default": "inherit",
          "markdownDescription": "Table Editor のテーマ。`inherit` で VS Code の現在のテーマに追従。その他は 'extensionId:path' 形式のテーマID。コマンド 'Markdown Table Editor: Select Table Editor Theme' から選択できます。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-webview && npm run copy-mock",
    "copy-webview": "cp -r webview out/",
    "copy-mock": "mkdir -p out/src/mock && cp test/mock/* out/src/mock/",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/src/test/runTest.js",
    "test:integration": "npm run compile && node ./out/test/runIntegrationTests.js",
    "test:all": "npm run test && npm run test:integration",
    "dev": "node dev/start-dev-server.js",
    "dev:watch": "node dev/start-dev-server.js --watch"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "iconv-lite": "^0.6.3",
    "markdown-it": "^13.0.1"
  }
}
